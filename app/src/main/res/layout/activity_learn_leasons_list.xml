<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.dami.lernjava.Lessons.LessonListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_in_main_list_height"
        android:foreground="@drawable/lesson_border_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_list_basic_text_view"
            style="@style/LessonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:clickable="true"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="Basic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_in_main_list_height"
        android:foreground="@drawable/lesson_border_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_list_medium_text_view"
            style="@style/LessonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:clickable="true"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="Medium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_in_main_list_height"
        android:foreground="@drawable/lesson_border_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_list_advance_text_view"
            style="@style/LessonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:clickable="true"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="Advance" />

    </LinearLayout>

</LinearLayout>
